<html>
    <head>
        <title>BadgerCam</title>
        <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
        <meta http-equiv="Pragma" content="no-cache" />
        <meta http-equiv="Expires" content="0" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link href="/styles/main.css" rel="stylesheet" type="text/css" />
        <link href="/styles/fontawesome-all.css" rel="stylesheet" type="text/css" />

        <script type = "text/javascript" src="/scripts/jquery-3.5.1.min.js"></script>
        <script type = "text/javascript" src="/socket.io/socket.io.js"></script>
    </head>
    <body>

        <div class = "container-main">

            <!-- Main content -->
            <div class = "container-content">

                <div class = "container-content-wrapper container-centered">
                    <!-- Controls -->
                    <div class = "container-controls">
                        <div class = "container-navigation">
                            <select id = "selector_device" onchange = "updateStream();">
                                <option value = "none" <% if(selectedDevice === "none"){ %>selected<% } %>>Stop stream</option>
                                <% for (let device of devices) { %>
                                    <option class = "device-option" value = "<%= device.addr %>" <% if(selectedDevice == device.addr){ %>selected<% } %>><%= device.name %></option>
                                <% } %>
                                <option value = "all" <% if(selectedDevice === "all"){ %>selected<% } %>>All (in a grid)</option>
                            </select>
                        </div>
                        <div class = "container-options">
                            <button title = "Watch recordings" onclick = "window.location.href = '/'">
                                <i class="fas fa-photo-video"></i> <span>Watch recordings</span>
                            </button>
                            <button title = "Watch all" onclick = "watchAll();">
                                <i class="fas fa-border-all"></i> <span>Watch all</span>
                            </button>
                        </div>
                    </div>

                    <!-- Video player --> 
                    <div class = "container-video">
                        <img id = "live-video" src="/livestream">

                        <div class = "container-video-info">
                            <span id = "video-info-camera"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type = "text/javascript">

            function updateStream(){
                let selectedStream = $("#selector_device").children("option:selected").val();
                let devices = selectedStream;
                if (selectedStream === "none"){
                    devices = undefined;
                }
                else if (selectedStream === "all"){
                    let availableStreams = $("#selector_device .device-option").map((i, el) => $(el).val()).toArray();
                    console.log(availableStreams);
                    devices = availableStreams.join(",");
                }

                $.post("/setlivemode", {devices: devices}, (data) => {
					if (data.success) {
                        setTimeout(() => {
                            window.location.href = changeUrl({"live_device": selectedStream});
                        }, 2000);
					} else {
						alert("Oh noes, got an error! '" + data.message + "' (sorry)");
					}
                });
            }

            function changeUrl(changeParams) {
                let url = window.location.href;
                let params = {};
                if (url.includes("?")) {
                    let paramParts = url.substring(url.indexOf("?")+1).split("&");
                    for (let param of paramParts) {
                        if (param.trim().length > 0) {
                            let parts = param.split("=");
                            params[parts[0]] = parts[1];    
                        }
                    }
                }

                for (let key in changeParams) {
                    params[key] = changeParams[key];
                }

                let newUrl = "/live?";
                let firstParam = true;
                for (let key in params) {
                    if (!firstParam) { newUrl += "&"; }
                    newUrl += (key + "=" + params[key]);
                    firstParam = false;
                }

                return newUrl;
            }
        </script>
    </body>
</html>